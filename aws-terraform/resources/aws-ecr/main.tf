locals {
  aws_region = "us-east-1"
  ecr_repository_names = [
    "db",
    "redis",
    "ui",
    "auth",
    "weather"
  ]

  tags = {
    "id"             = "2560"
    "owner"          = "DevOps Easy Learning"
    "teams"          = "DEL"
    "environment"    = "dev"
    "project"        = "del"
    "create_by"      = "Terraform"
    "cloud_provider" = "aws"
  }
}

module "ecr_repository_names" {
  source               = "../../modules/aws-ecr"
  aws_region           = local.aws_region
  ecr_repository_names = local.ecr_repository_names
  tags                 = local.tags
}
